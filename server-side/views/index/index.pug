extends ../base
block head
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title Главная страница
		link(href="/css/index.css" rel="stylesheet")
block content
	body
		.Background
			canvas.Background-canvas
		.wellcome-page
			.container
				button.auth-button
					| Авторизоваться
				.flip
					.auth
						if (msg)
							.status= msg
						.auth__intro

							.avatar.auth__avatar
								.avatar__pic(style="background-image: url('/images/main-avatar.jpg'); background-position: 44% 0%;  background-size: 150%")
								img.visuallyHidden(src="/images/main-avatar.jpg")
								//- img.visuallyHidden(src=require("../../img/water.jpg"))
								//- img.visuallyHidden(src=require("../../img/water-maps.jpg"))
							.auth__name
								| Дмитрий Петров
							.auth__descr
								| Личный сайт веб разработчика
							.auth__socials
								.socials.socials__index
									ul.social__list
										li.social__item
											a(href='#')
												+icon('vk','standard-mod')
										li.social__item
											a(href='#')
												+icon('github','standard-mod')
										li.social__item
											a(href='#') 
												+icon('in','standard-mod')
							.auth-intro__buttons
								ul.buttons__list
									li.buttons__item 
										a(href='/work').buttons__link
											| Мои работы
									li.buttons__item
										a(href='/about').buttons__link
											| Обо мне
									li.buttons__item
										a(href='/blog').buttons__link
											|Блог
							.test-block
						.auth__backside
							form.auth-form#login(action="/login" method="POST")
								.subtitle.subtitle__intro
									h3.subtitle__text
										| Авторизуйтесь
								.auth-form__elem.auth-form__elem_login
									+icon('login','login-main')
									label(label for="login" class="auth-form__label")
									input(type="text" name ='login' id="auth-login" class="auth-form__input" placeholder="Логин" )
								.auth-form__elem.auth-form__elem_password
									+icon('password','password-main')
									label(label for="password" class="auth-form__label")
									input(type="password" name ='password' id="auth-password" class="auth-form__input" placeholder="Пароль")
								.auth-form__check
									input(type="checkbox" name="capcha" id="ch" class="auth-form__checkbox-name" )
									label(for="ch" class="auth-form__checkbox")
										span
										|Я человек
								.auth-form__question
									| Вы точно не робот?
								.auth-form__radios
									.auth-form__radio
										input(type="radio" name="r-choice-yes" id="r1" class="auth-form__radio-elem")
										label(for="r1" class="auth-form__radio-name")
											span.custom
											span.answer
													| Да
									.auth-form__radio
										input(type="radio" name="r-choice-no" id="r2" class="auth-form__radio-elem")
										label(for="r2" class="auth-form__radio-name")
											span.custom
											span.answer
													| Не уверен
								.auth-form__controls
										button(type="button" class="btn" onclick="location.href='./about.html';")
											span: | На главную
										button(type="submit" class="btn")
											span: | Войти		
						
			.wellcome-footer
				.wellcome-footer__text © Дмитрий Петров | создано с любовью в LoftSchool | 2017
		script(type="text/javascript" src="../.././js/common.js")
		script(type="text/javascript" src="../.././js/index.js")
		script(type="text/javascript" src="../.././js/webgl.js")