extends ../base
block variables
	- title = 'Блог'
	- descr = 'Статьи, которые я написал'
	- articlesTitle = ['Самое важное в SASS', 'Приемы в верстке', 'Самый необходимый набор Webpack плагинов', 'Плюсы использования шаблонизатора Pug']
block head
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title Блог
		link(href="../.././css/main.css" rel="stylesheet")
		link(href="../.././css/blog.css" rel="stylesheet")
block content
	body
		header.blog-header
			block header
			include ../includes/_header/_header
		.menu-tablets.menu-tablets__hidden
			.menu-tablets__bg
				button.open-menu
			.articles
				ul.articles__list
					each article in articles
						li.articles__item
							.articles__title
									a(class='articles__link articles__link-tablets')= article.title
		section.blog-main
			.about-figure-cut
				include ../../images/bg-about.svg
			.main-container.main-container__blog
				.blog-side.blog-side__left
					.articles
						ul.articles__list
							each article in articles
								li.articles__item
									.articles__title
											a(class='articles__link',href='#')= article.title
				.blog-content.blog-content__container
					each article in articles
						.blog-article
							.subtitle
								.subtitle__text.subtitle__text_blog#sass= article.title
								- var date = new Date(article.date).toLocaleDateString('ru', {year: 'numeric',month: '2-digit',day: '2-digit'}) //Какой-то костыль
							.content-date= date
							.content-text
								p= article.body


				include ../includes/_footer/_footer



		script(type="text/javascript" src="../.././js/common.js")
		script(type="text/javascript" src="../.././js/main.js")
		script(type="text/javascript" src="../.././js/blog.js")

